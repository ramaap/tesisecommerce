<?xml version="1.0"?>
<config>
  <modules>
    <Veritrans_Vtweb>
      <version>0.1.0</version>
    </Veritrans_Vtweb>
  </modules>
  <global>
    <models>
      <vtweb>
        <class>Veritrans_Vtweb_Model</class>
      </vtweb>
    </models>
      <resources>
          <vtweb_setup>
              <setup>
                  <module>Veritrans_Vtweb</module>
              </setup>
              <connection>
                  <use>core_setup</use>
              </connection>
          </vtweb_setup>
          <vtweb_write>
              <connection>
                  <use>core_write</use>
              </connection>
          </vtweb_write>
          <vtweb_read>
              <connection>
                  <use>core_read</use>
              </connection>
          </vtweb_read>
      </resources>
    <helpers>
      <vtweb>
        <class>Veritrans_Vtweb_Helper</class>
      </vtweb>
    </helpers>
    <blocks>
      <vtweb>
        <class>Veritrans_Vtweb_Block</class>
      </vtweb>
    </blocks>
    <adminhtml>
      <layout>
        <updates>
          <vtweb>
            <file>veritrans.xml</file>
          </vtweb>
        </updates>
      </layout>
    </adminhtml>
  </global>
  <default>
    <payment>
      <vtweb>
        <model>vtweb/standard</model>
        <active>1</active>
        <order_status>pending</order_status>
        <title>Veritrans VT Web</title>
        <payment_action>sale</payment_action>
        <allowspecific>0</allowspecific>
        <sort_order>1</sort_order>
        <conversion_rate>10000</conversion_rate>
        <enable_3d_secure>true</enable_3d_secure>
        <environment>sandbox</environment>
      </vtweb>
    </payment>
  </default>
  <frontend>
    <routers>
      <vtweb>
        <use>standard</use>
        <args>
          <module>Veritrans_Vtweb</module>
          <frontName>vtweb</frontName>
        </args>
      </vtweb>
    </routers>
  </frontend>
  <adminhtml>
    <layout>
      <updates>
        <veritrans_vtweb>
          <file>veritrans.xml</file>
        </veritrans_vtweb>
      </updates>
    </layout>
  </adminhtml>
</config>
